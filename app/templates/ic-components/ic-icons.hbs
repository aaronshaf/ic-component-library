<h1>&#123;&#123;ic-icon-<span style="color: #ccc">awesome</span>{{#if fillColor}} fill-color="{{fillColor}}"{{/if}}&#125;&#125;</h1>

<attributes class="flex flex-column">
  <attribute class="flex flex-row">
    <label>fill-color:</label>
    {{input value=fillColor class="flex-1" autofocus="autofocus"}}
  </attribute>
</attributes>

<icon-examples class="flex flex-1 flex-row flex-wrap">
  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-x fill-color=fillColor}}
    <icon-example-tag class="flex-1">x</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-settings fill-color=fillColor}}
    <icon-example-tag class="flex-1">settings</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-assignment fill-color=fillColor}}
    <icon-example-tag class="flex-1">assignment</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-quiz fill-color=fillColor}}
    <icon-example-tag class="flex-1">quiz</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-page fill-color=fillColor}}
    <icon-example-tag class="flex-1">page</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-discussion fill-color=fillColor}}
    <icon-example-tag class="flex-1">discussion</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-publish fill-color=fillColor}}
    <icon-example-tag class="flex-1">publish</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-unpublish fill-color=fillColor}}
    <icon-example-tag class="flex-1">unpublish</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-drag-handle fill-color=fillColor}}
    <icon-example-tag class="flex-1">drag-handle</icon-example-tag>
  </icon-example>

  <icon-example class="flex flex-1 flex-row align-items-center">
    {{ic-icon-add fill-color=fillColor}}
    <icon-example-tag class="flex-1">add</icon-example-tag>
  </icon-example>
</icon-examples>

<style>
icon-example .ic-icon {
  width: 20px;
  height: 20px;
}

icon-examples {
  margin-top: 12px;
}

icon-example {
  margin: 0px 8px 8px 0;
  min-width: 175px;
  box-shadow: 1px 1px 3px #ddd;
  padding: 6px;
  transition: box-shadow 0.15s;
  -webkit-transition: box-shadow 0.15s;
}

icon-example:hover {
box-shadow: 1px 1px 3px #bbb;
}

icon-example-tag {
  white-space: nowrap;
  font-size: 1.1em;
  margin-left: 6px;
}
</style>