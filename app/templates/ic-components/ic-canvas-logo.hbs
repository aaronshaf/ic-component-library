<h1>&#123;&#123;ic-canvas-logo{{#if fillColor}} fill-color="{{fillColor}}"{{/if}}&#125;&#125;</h1>

<attributes class="flex flex-column">
  <attribute class="flex flex-row">
    <label>fill-color:</label>
    {{input value=fillColor list="colors" class="flex-1" autofocus="autofocus"}}
    <datalist id="colors">
      <option value="#D64027">
      <option value="#A3AAAD">
      <option value="white">
    </datalist>
  </attribute>
</attributes>

{{ic-canvas-logo background-color=backgroundColor fill-color=fillColor style="margin-top: 24px;width: 100px;height: 100px;display: block;"}}